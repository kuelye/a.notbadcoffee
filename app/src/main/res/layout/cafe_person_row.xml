<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@id/cafe_person_avatar_image_view"
        android:layout_marginLeft="@dimen/padding_standard_quarter"
        android:layout_marginRight="@dimen/padding_standard_quarter"
        android:layout_margin="@dimen/padding_standard_quarter"
        style="@style/AppTheme.ImageView.Avatar"
        tools:src="@drawable/ic_person_black_24dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/grey300"
        android:background="#00000000"
        app:riv_oval="true" />

    <TextView
        android:id="@id/cafe_person_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_standard_three_quarters"
        android:layout_marginRight="@dimen/padding_standard"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Иван Жмых" />

</LinearLayout>