<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_standard_half"
    tools:showIn="@layout/cafes_fragment"
    >

    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.percent.PercentFrameLayout
                android:id="@+id/cafe_row_photo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@id/cafe_row_photo_imageview"
                    android:maxWidth="720dp"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="178%"
                    tools:background="#cccccc" />
            </android.support.percent.PercentFrameLayout>

            <TextView
                android:id="@id/cafe_row_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cafe_row_photo_layout"
                android:padding="@dimen/padding_standard"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                tools:text="Централь" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@id/cafe_row_location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard_quarter"
                    android:layout_marginRight="@dimen/padding_standard_quarter"
                    android:src="@drawable/ic_place_black_24dp"
                    style="@style/AppTheme.ImageView.ClickableIcon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded"
                    >

                    <TextView
                        android:id="@id/cafe_row_location_address_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        tools:text="ул. Чарльза Дарвина, 42" />

                    <TextView
                        android:id="@id/cafe_row_location_metro_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        tools:text="м. Невский Проспект" />
                </LinearLayout>

                <TextView
                    android:id="@id/cafe_row_location_distance_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="666 м"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@id/cafe_row_info_header_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/clickable_min_size"
            >

            <TextView
                android:id="@id/cafe_row_open_until_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="Открыто до полуночи" />

            <ImageView
                android:id="@id/cafe_row_info_header_icon_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_standard_quarter"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_expand_more_black_24dp"
                style="@style/AppTheme.ImageView.ClickableIcon"
                tools:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@id/cafe_row_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@id/cafe_row_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard_quarter"
                    android:layout_marginRight="@dimen/padding_standard_quarter"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    style="@style/AppTheme.ImageView.ClickableIcon" />

                <ListView
                    android:id="@id/cafe_row_menu_listview"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:paddingTop="@dimen/padding_standard_half"
                    android:paddingBottom="@dimen/padding_standard_half"
                    tools:listitem="@layout/cafe_menu_row" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/cafe_row_timetable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard_quarter"
                    android:layout_marginRight="@dimen/padding_standard_quarter"
                    android:src="@drawable/ic_access_time_black_24dp"
                    style="@style/AppTheme.ImageView.ClickableIcon" />

                <ListView
                    android:id="@id/cafe_row_timetable_listview"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:paddingTop="@dimen/padding_standard_half"
                    android:paddingBottom="@dimen/padding_standard_half"
                    tools:listitem="@layout/cafe_menu_row" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/cafe_row_persons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard_quarter"
                    android:layout_marginRight="@dimen/padding_standard_quarter"
                    android:src="@drawable/ic_person_black_24dp"
                    style="@style/AppTheme.ImageView.ClickableIcon" />

                <ListView
                    android:id="@id/cafe_row_persons_listview"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:paddingTop="@dimen/padding_standard_half"
                    android:paddingBottom="@dimen/padding_standard_half"
                    tools:listitem="@layout/cafe_person_row" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/cafe_row_roaster_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard_quarter"
                    android:layout_marginRight="@dimen/padding_standard_quarter"
                    android:src="@drawable/ic_whatshot_black_24dp"
                    style="@style/AppTheme.ImageView.ClickableIcon" />

                <TextView
                    android:id="@id/cafe_row_roaster_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:text="Ппппппппппппп"
                    tools:ignore="RtlHardcoded"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
