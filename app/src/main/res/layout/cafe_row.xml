<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_standard_half"
    android:layout_marginRight="@dimen/padding_standard_half"
    android:layout_marginTop="@dimen/padding_standard_quarter"
    android:layout_marginBottom="@dimen/padding_standard_quarter"
    tools:showIn="@layout/cafes_fragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            layout="@layout/cafe_header_layout" />

        <include
            layout="@layout/cafe_info_layout" />
    </LinearLayout>
</android.support.v7.widget.CardView>
