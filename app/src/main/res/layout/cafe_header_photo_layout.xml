<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@id/cafe_photo_image_view"
        android:background="@drawable/photo_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@id/cafe_photo_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/AppTheme.ProgressBar.Inverse" />

    <include
        layout="@layout/scrim"
        android:id="@id/cafe_photo_scrim_layout"
        android:visibility="invisible" />

    <ImageView
        android:id="@id/cafe_photo_clickable_image_view"
        android:background="@drawable/selectable_item_background_inverse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>