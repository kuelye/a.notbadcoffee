<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.percent.PercentFrameLayout
        android:id="@id/positioning_cafe_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="@fraction/cafe_photo_image_view_aspect_ratio"
            >

            <ImageView
                android:id="@id/cafe_photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="#cccccc" />

            <ImageView
                android:id="@id/cafe_photo_clickable_image_view"
                android:background="@drawable/selectable_item_background_inverse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </android.support.percent.PercentFrameLayout>

    <TextView
        android:id="@id/cafe_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/positioning_cafe_photo_layout"
        android:padding="@dimen/padding_standard"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        tools:text="Централь" />
</RelativeLayout>