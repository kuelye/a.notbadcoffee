<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/cafe_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@id/positioning_cafe_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <ImageView
            android:id="@id/cafe_photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="#AAA" />

        <include
            android:id="@id/cafe_photo_scrim_layout"
            layout="@layout/scrim" />

        <ImageView
            android:id="@id/cafe_photo_clickable_image_view"
            android:background="@drawable/selectable_item_background_inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cafe_photo_image_view"
            android:layout_alignBottom="@id/cafe_photo_image_view" />
    </RelativeLayout>

    <include
        android:layout_alignBottom="@id/positioning_cafe_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/cafe_header_name_and_links_layout" />
</RelativeLayout>