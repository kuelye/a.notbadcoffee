<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppTheme.Toolbar.Title</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="TextAppearance.Widget.AppTheme.Toolbar.Title"
           parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2"
           parent="TextAppearance.AppCompat.Body2" />

    <style name="TextAppearance.AppTheme.Body1"
           parent="TextAppearance.AppCompat.Body1" />

    <style name="TextAppearance.AppTheme.Caption"
           parent="TextAppearance.AppCompat.Caption" />

    <style name="AppTheme.ImageView">
        <!-- stub -->
    </style>

    <style name="AppTheme.ImageView.Icon" parent="AppTheme.ImageView">
        <item name="android:alpha">0.54</item>
    </style>

    <style name="AppTheme.ImageView.ClickableIcon" parent="AppTheme.ImageView.Icon">
        <item name="android:padding">@dimen/padding_standard_three_quarters</item>
    </style>

    <style name="AppTheme.ImageView.Avatar" parent="AppTheme.ImageView">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
    </style>

</resources>
